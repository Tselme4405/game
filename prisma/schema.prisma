generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  TEACHER
  STUDENT
}

model Person {
  id        String   @id @default(cuid())
  role      Role
  name      String
  classCode String?  // сурагч дээр 3 оронтой код, багш дээр null байж болно
  createdAt DateTime @default(now())

  @@index([role])
}
 